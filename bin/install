#!/usr/bin/env bash

set -ueo pipefail
shopt -s dotglob

# shellcheck source=SCRIPTDIR/../lib/utils.bash
source "$(dirname "${BASH_SOURCE[0]}")/../lib/utils.bash"

asdf_openssl_init "install"
asdf_openssl_init_traps

# Install Openssl, building from source if necessary.
# The installation will be placed in ASDF_INSTALL_PATH when complete.
asdf_openssl_install() {
  if [ "$ASDF_OPENSSL_DEBUG" = "yes" ]; then
    set -x
  fi

  if [ "$(asdf_openssl_needs_download)" = "yes" ]; then
    die "No openssl source to build or archive to install."
    return 1
  fi

  asdf_openssl_build
  section_start "III. Install (${ASDF_OPENSSL_INSTALL_PATH//${HOME}/\~})"

  step_start "cp to ${ASDF_OPENSSL_INSTALL_PATH//${HOME}/\~}"
  rm -rf "$ASDF_OPENSSL_INSTALL_PATH"
  cp -R "$ASDF_DOWNLOAD_PATH" "$ASDF_OPENSSL_INSTALL_PATH"
  step_end "âœ“"

  # Finalize installation
  step_start "mv to ${ASDF_INSTALL_PATH//${HOME}/\~}"
  rm -rf "$ASDF_INSTALL_PATH"
  mv -v "$ASDF_OPENSSL_INSTALL_PATH" "$ASDF_INSTALL_PATH"
  step_end "âœ“"

  step_start "ðŸ‘‘ installed Openssl ${ASDF_INSTALL_VERSION}$(asdf_openssl_time)"
  step_end "âœ“"

  if [ "$ASDF_OPENSSL_DEBUG" = "yes" ]; then
    set +x
  fi
}

# No exec {fd} redirection with bash 3
# shellcheck disable=SC2001
BASH_MAJOR_VERSION="$(echo "$BASH_VERSION" | sed 's/\..*//')"
if [ "$BASH_MAJOR_VERSION" -ge 4 ]; then
  exec {ASDF_OPENSSL_STDOUT}<&1 {ASDF_OPENSSL_STDERR}<&2
  {
    asdf_openssl_install
  } 1>>"$(asdf_openssl_log)" 2>>"$(asdf_openssl_log)"
else
  touch "$(asdf_openssl_log)"
  asdf_openssl_install
fi
